@model IEnumerable<FrybreadFusion.Models.Comment>

@{
    ViewData["Title"] = "Filtered Comments";
}

<h2>@ViewData["Title"]</h2>

<!-- Form for filtering comments -->
<form asp-action="FilteredComments" asp-controller="Comments" method="get" class="mb-3">
    <div class="form-group">
        <label for="UserName">Name of person posting:</label>
        <input type="text" name="userName" class="form-control" placeholder="Enter name" />
    </div>
    <div class="form-group">
        <label for="DatePosted">Date posted:</label>
        <input type="date" name="datePosted" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Display the list of comments -->
@foreach (var comment in Model)
{
    <div class="comment">
        <strong>@comment.UserName</strong> said:
        <blockquote>@comment.UserComment</blockquote>
        <p>Posted on @comment.DatePosted.ToString("yyyy-MM-dd")</p>
    </div>
}
