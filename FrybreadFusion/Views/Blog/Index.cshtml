@model List<FrybreadFusion.Models﻿.BlogPost>
@{
    ViewData["Title"] = "Blog";
}

<div class="text-center">
    <h1 class="display-4">BlogPosts</h1>
    <p>A list of the latest blog posts:</p>
</div>

<div class="container mt-5">
    <div class="row">

        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card post-card h-100 shadow">
                    <!-- h-100 makes the card take full height, shadow gives a light shadow effect -->
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Text</p>
                        <p class="text-muted"><small><strong>Posted by:</strong> @post.Name on @post.DatePosted.ToShortDateString()</small></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var rating in post.Ratings)
                        {
                            <li class="list-group-item">@rating.Rate</li>
                        }
                    </ul>
                </div>
            </div>
        }

    </div>
</div>



<div class="row mt-4">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Post", "Blog")" class="btn btn-primary">Create New Post</a>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-12 text-right">
        <a href="@Url.Action("Author", "Blog")">About the Author</a>
    </div>
</div>
